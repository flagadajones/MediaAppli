<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
        android:id="@+id/picker"
        android:layout_width="285dp"
        android:layout_height="290dp"
        app:end_angle="270"
        app:init_position="70"
        app:max="270"
        app:rotate_angle="-180"
        app:start_angle="0"
        app:text_color="#FF0000"
        app:text_size="65"
        app:wheel_active_color="#00BFFF"
        app:wheel_size="4"
        app:wheel_unactive_color="#FFCCCCCC" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="1">
        <TextView  android:text="angle Max"             android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            />
        <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
            android:id="@+id/angle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:end_angle="360"
            app:init_position="270"
            app:max="360"
            app:rotate_angle="-90"
            app:start_angle="0"
            app:text_color="#FF0000"
            app:text_size="40"
            app:wheel_active_color="#00BFFF"
            app:wheel_size="4"
            app:wheel_unactive_color="#FFCCCCCC" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_weight="1"
        android:layout_height="match_parent" >
        <TextView  android:text="rotation"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            />
    <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
            android:id="@+id/rotation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:end_angle="360"
            app:init_position="270"
            app:max="360"
            app:rotate_angle="-90"
            app:start_angle="0"
            app:text_color="#FF0000"
            app:text_size="40"
            app:wheel_active_color="#00BFFF"
            app:wheel_size="4"
            app:wheel_unactive_color="#FFCCCCCC" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>