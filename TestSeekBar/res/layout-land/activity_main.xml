<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
        android:id="@+id/picker"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        app:end_angle="270"
        app:init_position="70"
        app:max="270"
        app:pointer_color="#0174DF"
        app:pointer_halo_color="#88252525"
        app:pointer_size="34"
        app:rotate_angle="-180"
        app:start_angle="0"
        app:text_color="#FF0000"
        app:text_size="65"
        app:wheel_active_color="#00BFFF"
        app:wheel_size="4"
        app:wheel_unactive_color="#FFCCCCCC" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0.59"
        android:gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="angle Max" />

            <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
                android:id="@+id/angle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:end_angle="360"
                app:init_position="270"
                app:max="360"
                app:pointer_color="#0174DF"
                app:pointer_halo_color="#88252525"
                app:pointer_size="34"
                app:rotate_angle="-90"
                app:start_angle="0"
                app:text_color="#FF0000"
                app:text_size="40"
                app:wheel_active_color="#00BFFF"
                app:wheel_size="4"
                app:wheel_unactive_color="#FFCCCCCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotation" />

            <fr.flagadajones.widget.holocircleseekbar.HoloCircleSeekBar
                android:id="@+id/rotation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:end_angle="360"
                app:init_position="270"
                app:max="360"
                app:pointer_color="#0174DF"
                app:pointer_halo_color="#88252525"
                app:pointer_size="34"
                app:rotate_angle="-90"
                app:start_angle="0"
                app:text_color="#FF0000"
                app:text_size="40"
                app:wheel_active_color="#00BFFF"
                app:wheel_size="4"
                app:wheel_unactive_color="#FFCCCCCC" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>