<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="5dp" android:background="@drawable/renderer_status_gridview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/md__category_background"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp" >

        <ImageView
            android:id="@+id/deviceIcone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:src="@drawable/bg_img_loading" />

        <TextView
            android:id="@+id/deviceName"
            style="@style/MenuDrawer.Widget.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renderer"
            android:textSize="12sp" />

    </LinearLayout>
    <TextView
         style="@style/MenuDrawer.Widget.Title"
            android:textSize="12sp" 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:text="Non Disponible" />
</LinearLayout>